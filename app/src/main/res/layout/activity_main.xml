<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:slidingLayer="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:homeAsUpIndicator="@drawable/ic_ecquo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin"/>



            <TextView
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Tasks"
                android:textSize="28dp"
                android:layout_above="@+id/container_frame"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <FrameLayout
                android:id="@+id/container_frame"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/rounded_corner"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/fab1"
                android:layout_alignStart="@+id/fab1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing on the list for today. Add new tasks now"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

        <com.andtinder.view.CardContainer xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/deck1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_backdrop_height"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

            </FrameLayout>



        <android.support.design.widget.FloatingActionButton
            android:layout_alignParentBottom="true"
            android:foregroundGravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:src="@drawable/graphicon"
            android:id="@+id/fab1"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_gravity="right"/>


            <android.support.design.widget.FloatingActionButton
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:foregroundGravity="bottom|right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@android:drawable/ic_input_add"
                android:id="@+id/fab2"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_gravity="right"
                android:layout_alignTop="@+id/fab1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>




</android.support.v4.widget.DrawerLayout>